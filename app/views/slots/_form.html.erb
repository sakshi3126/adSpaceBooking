<div class="container">
  <div class="form-row">
    <div class="col-sm-8 col-sm-offset-2">
      <%= simple_form_for(@slot, local: true) do |f| %>
        <div class="card">
          <div class="card-body">
            <div class="form-group">
              <%= f.label :title, class: "control-label" %>
              <%= f.text_field :title, class: "form-control" %>
            </div>
            <div class="col-sm-10">
            <div class="form-group">
              <div class='input-group date' id='datetimepicker8'>
              <%= f.text_field :start_at, class: "form-control", as: :string %>
              <span class="input-group-addon">
                    <span class="fa fa-calendar">
                    </span>
                </span>
              </div>
            </div>
            </div>
            <div class="form-group">
              <%= f.input :end_at, :order => [:month, :day, :year], class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :Status, class: "control-label" %>
              <%= f.select :status, Slot.statuses.keys, {}, class: 'form-control' %>
            </div>
          </div>
          <div class="card-footer">
            <div class="form-group text-center">
              <%= f.hidden_field :user_id, value: @user.id %>
              <%= f.submit class: "btn btn-primary btn-block mb-2" %>
            </div>
            <div class="form-group text-center">
              <%= link_to 'Back', slots_path, class: 'btn btn-primary btn-block mb-2' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <%= render 'shared/snippets/side_menu' %>
    <div class="col-sm-10" id="show-content">
    <div class="col-sm-10">
      <div class="posted-by"><strong>Booked by <%= @slot.user.name %></strong></div>
      <div class="col-sm-2">
        <strong>Name:</strong>
        <p><%= @slot.title %></p>
      </div>
      <div class="col-sm-2">
        <strong>Status:</strong>
        <p><%=  @slot.status %></p>
      </div>
      <div class="col-sm-2">
        <strong>Start At:</strong>
        <p><%=format_date_time_meridiem(@slot.start_at) %></p>
      </div>
      <div class="col-sm-2">
        <strong>End At:</strong>
        <p><%= format_date_time_meridiem(@slot.end_at) %></p>
      </div>
    </div>
  </div><!-- row -->
</div>
</div>

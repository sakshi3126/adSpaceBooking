<% if current_user.role == "Organisation" %>
  <% if @slot.status == "Pre Booked Slot" %>
    <%= link_to "Bid Slot", slot_path(slot.id), class: 'btn btn-primary' %>
  <% end %>
<% elsif (current_user.role == "Organisation" || current_user.role == "Space Agent") %>
  <% if @slot.status == "Free Slot" %>
    <%= link_to "Book Slot", slot_path(slot.id), class: 'btn btn-primary' %>
  <% end %>
<% else %>

<% end %>
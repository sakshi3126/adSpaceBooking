<div class="container" id="sign-up-form">
  <div class="row">
    <div class="col-sm-offset-4 col-sm-4">
      <h3>Sign up <small>it's free!</small></h3>

      <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%#= render "devise/shared/error_messages", resource: resource %>
            <%= f.text_field :name, required: true, class: 'form-control' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
            <%= f.select :role, User.roles.keys, {}, required: true, class: 'form-control' %>
            <%= f.password_field :password, required: true, hint: ("#{@minimum_password_length} character minimum" if @minimum_password_length),
                                 input_html: {autocomplete: "new-password"}, class: 'form-control'%>

            <%= f.password_field :password_confirmation, required: true, autocomplete: "new-password",class: 'form-control' %>

            <%= f.submit "Sign up", class: 'btn btn-primary sign-up-button' %>

      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

